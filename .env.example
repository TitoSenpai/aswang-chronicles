# Aswang Chronicles Environment Variables Template
# Copy this file to .env and fill in your actual values

# Admin Configuration
VITE_ADMIN_KEY=your_secure_admin_key_here

# Firebase Configuration
# Get these from Firebase Console > Project Settings > General > Your apps
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=your-app-id

# Application Settings
VITE_APP_NAME=Aswang Chronicles
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=development

# Content Moderation Settings
# Auto-approval threshold (comments scoring this or higher are auto-approved)
VITE_AUTO_APPROVAL_THRESHOLD=75

# Auto-rejection threshold (comments scoring below this are auto-rejected)
VITE_AUTO_REJECTION_THRESHOLD=50

# Rate limiting (maximum comments per hour per user)
VITE_RATE_LIMIT_COMMENTS_PER_HOUR=5

# Security Settings
# Session timeout in minutes
VITE_SESSION_TIMEOUT_MINUTES=60

# Maximum failed login attempts before lockout
VITE_MAX_LOGIN_ATTEMPTS=3